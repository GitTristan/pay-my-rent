<div class="form-horizontal">

 <%= form_for @tenant do |f| %>


   <div class="form-group">
     <%= f.label :name, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.text_field :name, class: "form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= f.label :unit, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.number_field :unit, class: "col-md-4 form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= f.label :lease_start, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.date_field :lease_start, class: "col-md-4 form-control" %>
     </div>

   </div>
   <div class="form-group">
     <%= f.label :lease_end, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= f.date_field :lease_end, class: "col-md-4 form-control" %>
     </div>
   </div>


   <div class="form-group">
     <div class="col-md-offset-2 col-sm-6">
       <%= f.submit class: "btn btn-primary"%>
       <%= link_to "Cancel", tenants_path, class: "btn btn-default" %>
     </div>
   </div>
<% end %>
</div>
