<div class= "container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New Tenant", new_tenant_path, class: "btn btn-info" %>
    </div>
      <h1>Tenants</h1>
    </div>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Unit</th>
            <th>Lease Start</th>
            <th>Lease End</th>
          </tr>
        </thead>
        <% @tenants.each do |t| %>
          <tr>
            <td><%= t.name %>
            </td>
            <td><%= t.unit %>
            </td>
            <td>
                <% if t.lease_start %>
                <%= t.lease_start.strftime("%m/%d/%Y") %>
                <% end %>
            </td>
            <td>
                <% if t.lease_end %>
                <%= t.lease_end.strftime("%m/%d/%Y") %>
                <% end %>
            </td>
            <td><div class= "text-right">
           <%= link_to "Edit", edit_tenant_path(t), class: "btn btn-info" %>
           <%= link_to "Delete", tenant_path(t), method: :delete, class: "btn btn-danger" %>
         </div>
         </td>
         <% end %>
          </tr>
      </table>
    </div>
