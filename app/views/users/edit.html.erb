<div class="container">
  <div class="page-header">
    <h1>New User</h1>
  </div>

<div class="form-horizontal">

 <%= form_for @user do |u| %>


   <div class="form-group">
     <%= u.label :name, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= u.text_field :name, class: "form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= u.label :email, class: "col-md-2 control-label" %>
     <div class="col-md-3">
       <%= u.text_field :email, class: "col-md-4 form-control" %>
     </div>
   </div>

   <div class="form-group">
     <div class="col-md-offset-2 col-sm-6">
       <%= u.submit class: "btn btn-primary"%>
       <%= link_to "Cancel", users_path, class: "btn btn-default" %>
     </div>
   </div>
<% end %>
</div>


</div>
